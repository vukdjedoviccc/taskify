// ============================================================================
// TASKIFY - Prisma Schema
// Task Management aplikacija sa Kanban Board-om
// ============================================================================

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER - Korisnici sistema
// ============================================================================
model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.NVarChar(191)
  email     String   @unique @db.NVarChar(191)
  password  String   @db.NVarChar(255)
  avatarUrl String?  @db.NVarChar(500)
  role      String   @default("USER") @db.NVarChar(16)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
